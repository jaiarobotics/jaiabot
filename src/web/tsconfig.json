{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": ".",
        "jsx": "react-jsx",
        "target": "ES2018",
        "esModuleInterop": true,
        "lib": ["ES2018", "dom"],
        "types": ["@testing-library/jest-dom", "@types/plotly.js"]
    },
    "exclude": ["node_modules", "dist", "coverage", "webpack.*.js", "*.config.js", "*.test.ts*"]
}
