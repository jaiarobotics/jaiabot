#!/usr/bin/env bash

# Intended to be installed to /etc/update-motd.d to be display in the MOTD (login message)

echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
echo "                                    __  __ ___                   "
echo "                         | /\ | /\ |__)/  \ |                    "
echo "                       __)/--\|/--\|__)\__/ |                    "
echo ""
echo "                       https://www.jaia.tech/                    "
echo "                   https://github.com/jaiarobotics/              "
export SYSTEMD_COLORS=1
echo "                        _ ___ __   _ _                           "
echo "                       |_  |  |_/ | | |                          "
echo "                       |  _|_ | | | | |                          "
echo ""
systemctl list-units -all "jaia_firm*"
echo "<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<"
echo "                            _  _  _                              "
echo "                        /\ |_/|_//                               "
echo "                       /--\|  | _|                               "
echo ""
systemctl list-units -all "jaiabot*"
echo "<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<"
echo 
cat /etc/jaiabot/version
cat /etc/jaiabot/dev_version 2> /dev/null
echo ""
echo -n "jaiabot-embedded " && apt-cache show jaiabot-embedded | grep -i version
echo
echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
