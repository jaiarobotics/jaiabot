[Unit]
Description=$description

BindsTo=jaiabot_gobyd.service
After=jaiabot_gobyd.service
$extra_unit

[Service]
User=$user
Group=$group

EnvironmentFile=$env_file
# Wait 5 seconds before starting
ExecStartPre=/bin/sleep 5
ExecStartPre=/usr/bin/systemctl stop hub-button-led-poweron.service
ExecStartPre=/usr/bin/systemctl start hub-button-led-services-running.service
ExecStart=$bin_dir/$exe -C '$gen $exe' $extra_flags
ExecStop=/usr/bin/systemctl start hub-button-led-poweron.service
ExecStop=$goby_bin_dir/goby_terminate -C '$gen goby_terminate' --target_pid $$MAINPID

TimeoutStopSec=10

[Install]
WantedBy=jaiabot_gobyd.service
