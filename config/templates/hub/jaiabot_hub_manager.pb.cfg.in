$app_block
$interprocess_block

fleet_id: $fleet_id
hub_id: $hub_id

status_sub_cfg {
    intervehicle {
        # publisher_id added in code for each configured managed_bot_modem_id
        # buffer configuration for BotStatus messages
        buffer {
            ack_required: false
            blackout_time: 1
            max_queue: 1 
            newest_first: true 
            ttl: 60
            value_base: 10
        }
    }
}

engineering_status_sub_cfg {
    intervehicle {
        # publisher_id added in code for each configured managed_bot_modem_id
        # buffer configuration for EngineeringStatus messages
        buffer {
            ack_required: false
            blackout_time: 1
            max_queue: 1 
            newest_first: true 
            ttl: 30
            value_base: 10
        }
    }
}

task_packet_sub_cfg {
    intervehicle {
        # publisher_id added in code for each configured managed_bot_modem_id
        # buffer configuration for TaskPacket messages
        buffer {
            ack_required: true
            blackout_time: 0
            max_queue: 42
            newest_first: false
            ttl: 3000
            value_base: 5
        }
    }
}

xbee {
    $xbee_config
}

hub_gpsd_device: "$hub_gpsd_device"

# Feed bot status as GPS sentences (RMC / HDT)
# bot_to_gps  { bot_id: 3   udp { remote_address: "127.0.0.1" remote_port: 33003 }}

# GPSD contacts (max 4 devices, so 3 contacts + hub local GPS)
contact_gps { contact: 1  gpsd_device: "udp://0.0.0.0:33001" use_track: true}
contact_gps { contact: 2  gpsd_device: "udp://0.0.0.0:33002" use_track: true}
contact_gps { contact: 3  gpsd_device: "udp://0.0.0.0:33003" use_track: true}
