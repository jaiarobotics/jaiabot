ansible_playbook {
    file: "cloud-check-virtualfleet-state.yml"
    name: "[VirtualFleet] Check state (e.g, running, stopped, etc.) of VirtualFleet machines"
    role: USER
    output_var {
        name: "instance_names"
        display_name: "Name"
    }
    output_var {
        name: "instance_state"
        display_name: "State"
    }
    limit: "localhost"
}

ansible_playbook {
    file: "cloud-manage-virtualfleet.yml"
    name: "[VirtualFleet] Start or Stop VirtualFleet machines"
    input_var {
        name: "desired_state"
        display_name: "Desired State"
        value: "running"
        value: "stopped"
    }
    output_var {
        name: "instance_names"
        display_name: "Name"
    }
    output_var {
        name: "instance_state"
        display_name: "State"
    }
    role: USER
    limit: "localhost"
}

ansible_playbook {
    file: "cloud-manage-virtualfleet.yml"
    name: "[VirtualFleet] Terminate VirtualFleet machines [DELETES ALL VIRTUALFLEET MACHINE DATA]"
    input_var {
        name: "desired_state"
        display_name: "Desired State"
        value: "terminated"
    }
    role: ADVANCED
    limit: "localhost"
    confirmation_required: true
}

ansible_playbook {
    file: "cloud-create-virtualfleet.yml"
    name: "[VirtualFleet] (Re)create VirtualFleet machines [DELETES ALL VIRTUALFLEET MACHINE DATA]"
    limit: "localhost"
    role: ADVANCED
    confirmation_required: true
}

